<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hldj.hmyg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hldj.hmyg.SellectActivity" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y28"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/sellect"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/ll_edit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/x8"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="品名："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_pinming"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center_vertical"
                    android:padding="5.0dip"
                    android:textColor="@color/main_color"
                    android:textSize="@dimen/x13" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:layout_marginTop="@dimen/x8"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="规   格："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_min_guige"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:text="---"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_max_guige"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="高   度："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_minHeight"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:text="---"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_maxHeight"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y28"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/x10"
                android:paddingRight="@dimen/x10" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:text="冠   幅："
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_minCrown"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:padding="@dimen/x2"
                    android:text="---"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/x15" />

                <EditText
                    android:id="@+id/et_maxCrown"
                    android:layout_width="0.0dip"
                    android:layout_height="@dimen/x23"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/green_btn_selector"
                    android:gravity="center"
                    android:hint="厘米"
                    android:inputType="number"
                    android:maxLength="7"
                    android:padding="@dimen/x2"
                    android:textColor="@color/gray"
                    android:textColorHint="@color/gray"
                    android:textSize="@dimen/x15" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_reset"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="重置"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/main_color" />

            <TextView
                android:id="@+id/sure"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color"
                android:gravity="center"
                android:text="确认"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>