<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_Pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/gbpBlackLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popWinBgColor" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_less"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:padding="15dp"
                android:text="购买数量" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/pop_reduce"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:background="@drawable/zhijiao_gray"
                    android:gravity="center"
                    android:text="一" />

                <EditText
                    android:id="@+id/pop_num"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/zhijiao_gray"
                    android:gravity="center"
                    android:inputType="number"
                    android:maxLength="7"
                    android:minWidth="40.0dip"
                    android:text="1" />

                <TextView
                    android:id="@+id/pop_add"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/zhijiao_gray"
                    android:gravity="center"
                    android:text="+" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_car"
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="@string/add_car"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>