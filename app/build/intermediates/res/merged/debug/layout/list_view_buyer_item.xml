<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutRoot"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/btn_my_list"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/y8" >

        <RelativeLayout
            android:layout_width="@dimen/x85"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/iv_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x5"
            android:orientation="vertical" >
            
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                
                
                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@drawable/r_o_green"
                    android:gravity="center_vertical"
                    android:paddingBottom="2.5dip"
                    android:paddingLeft="5.0dip"
                    android:paddingRight="5.0dip"
                    android:paddingTop="2.5dip"
                    android:singleLine="true"
                    android:text="接单"
                    android:textColor="@color/white"
                    android:textSize="@dimen/y9" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_01"
                        android:layout_width="@dimen/y10"
                        android:layout_height="@dimen/y10"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textSize="@dimen/y11" />

                    <com.neopixl.pixlui.components.textview.TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:singleLine="true"
                        android:textColor="@color/main_color"
                        android:textSize="@dimen/y11" />
                </LinearLayout>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_04"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/little_gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_05"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/little_gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_06"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:singleLine="true"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y9" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1" >

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="20.00"
                    android:textColor="#FA0000" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_09"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="200株"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y7" />

                <com.neopixl.pixlui.components.textview.TextView
                    android:id="@+id/tv_08"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/tv_07"
                    android:layout_alignBottom="@+id/tv_07"
                    android:layout_toRightOf="@+id/tv_07"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:text="元/株"
                    android:textColor="@color/gray"
                    android:textSize="@dimen/y7" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#CCCCCC" />

</LinearLayout>