<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="12dp"
    android:paddingLeft="12dp"
    android:paddingRight="12dp"
    android:background="#000000"
    >
    
    <ImageView 
        android:id="@+id/app_logo"
        android:layout_width="40.0dip"
        android:layout_height="40.0dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/e" />

    <TextView
        android:layout_toRightOf="@id/app_logo"
        android:id="@+id/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="花木易购"
        android:textColor="#FFFFFF" />

    <ProgressBar
        android:id="@+id/download_pb"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="150dp"
        android:layout_height="8dp"
        android:layout_below="@id/app_name"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/app_logo"
        android:progressDrawable="@drawable/progressbar_notification_style" />

    <TextView
        android:id="@+id/download_state"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/download_pb"
        android:layout_below="@id/download_pb"
        android:layout_marginLeft="20dp"
        android:paddingTop="2dp"
        android:text="已暂停"
        android:textSize="10sp" />

    <ImageView
        android:id="@+id/control_bt"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/carry_on" />

    <TextView
        android:id="@+id/control_hint_tv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/control_bt"
        android:gravity="center_horizontal"
        android:paddingTop="2dp"
        android:text="继续"
        android:textSize="8sp" />

</RelativeLayout>