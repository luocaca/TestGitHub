<com.yunpay.app.KeyboardLayout3 xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_mainView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context="com.hldj.hmyg.saler.SaveSeedlingActivity">


    <RelativeLayout
        android:id="@+id/id_rl_top"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="发布苗木资源"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />

        <TextView
            android:id="@+id/id_tv_edit_all"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:background="@drawable/green_btn_selector"
            android:gravity="center"
            android:text="清空"
            android:textColor="@color/main_color"
            android:textSize="16dp"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/gray_bg">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/y8"
                android:background="@color/white"
                android:orientation="vertical">

                <com.zzy.common.widget.MeasureGridView
                    android:id="@+id/publish_flower_info_gv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="5dip"
                    android:layout_marginLeft="5dip"
                    android:background="@color/white"
                    android:listSelector="@color/transparent"
                    android:numColumns="4"
                    android:scrollbars="none" />
            </LinearLayout>

            <!--自动换行  控件  动态添加 tag 标签-->
            <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/id_flowlayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/y8"
                android:background="@color/white"
                android:padding="2.5dp"
                app:max_select="1"></com.zhy.view.flowlayout.TagFlowLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp" />

                <com.hhl.library.FlowTagLayout
                    android:id="@+id/size_flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <com.hhl.library.FlowTagLayout
                    android:id="@+id/mobile_flow_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_01"
                android:layout_width="match_parent"
                android:layout_height="@dimen/y34"
                android:background="@drawable/feedback_content_edittext_shape"
                android:orientation="horizontal"
                android:padding="1px"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/btn_my_list"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/x7">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:paddingLeft="@dimen/x12"
                        android:text="苗木分类"
                        android:textSize="@dimen/x15" />

                    <TextView
                        android:id="@+id/tv_firstSeedlingTypeName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center_vertical"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/x15" />

                    <ImageView
                        style="@style/more_triangle"
                        android:background="@drawable/ic_arrow_right" />
                </LinearLayout>
            </LinearLayout>



            <include layout="@layout/include_seeding_auto_show"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/y31"
                android:background="@drawable/feedback_content_edittext_shape"
                android:paddingLeft="@dimen/x9"
                android:paddingRight="@dimen/x9"
                android:paddingTop="@dimen/y10">


                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/y14"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal">

                    <RadioButton style="@style/radio_seedling_common" />

                    <RadioButton style="@style/radio_seedling_common" />

                    <RadioButton style="@style/radio_seedling_common" />

                    <RadioButton style="@style/radio_seedling_common" />

                    <RadioButton style="@style/radio_seedling_common" />


                </RadioGroup>


            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:background="@color/red" />

            <include layout="@layout/include_seeding_bottom" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/iv_ready_save"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="暂存草稿箱"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/main_color" />

        <Button
            android:id="@+id/save"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="发布"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>

</com.yunpay.app.KeyboardLayout3>