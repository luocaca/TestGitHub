<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hldj.hmyg"
    android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18"
            />

        <info.hoang8f.android.segmented.SegmentedGroup
            android:id="@+id/segmented3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:orientation="horizontal"
            app:sc_unchecked_tint_color="@color/white"
            segmentedgroup:sc_border_width="1dp"
            segmentedgroup:sc_corner_radius="5dp"
            segmentedgroup:sc_tint_color="@color/main_color" >

            <RadioButton
                android:id="@+id/button31"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部" />

            <RadioButton
                android:id="@+id/button32"
                style="@style/RadioButton3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="报价品种" />
        </info.hoang8f.android.segmented.SegmentedGroup>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />

        <ImageView
            android:id="@+id/iv_sousuo"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:background="@drawable/ic_sousuo"
            android:visibility="gone" />

        <TextView
            android:id="@+id/edit_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:gravity="center"
            android:text="品种管理"
            android:textColor="@color/main_color"
            android:visibility="invisible" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/line" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_choice"
            android:layout_width="match_parent"
            android:visibility="gone"
            android:layout_height="@dimen/y31"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x13"
            android:paddingRight="@dimen/x13"
            android:paddingTop="@dimen/x7" >

            <RelativeLayout
                android:id="@+id/rl_choose_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_sorts"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="品种"
                        android:textSize="@dimen/y11" />

                    <ImageView
                        android:id="@+id/iv_seller_arrow3"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_choose_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/bactivity_choose_type"
                        android:textSize="@dimen/y11" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_choose_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/bactivity_choose_price"
                        android:textSize="@dimen/y11" />

                    <ImageView
                        android:id="@+id/iv_seller_arrow2"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_choose_screen"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="地区"
                        android:textSize="@dimen/y11" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <me.kaede.tagview.TagView
            android:id="@+id/tagview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2.5dp"
            app:lineMargin="5dp"
            app:tagMargin="3dp"
            app:textPaddingBottom="3dp"
            app:textPaddingLeft="10dp"
            app:textPaddingRight="10dp"
            app:textPaddingTop="3dp" >
        </me.kaede.tagview.TagView>

        <RelativeLayout
            android:id="@+id/ll_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_notifaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:drawableTop="@drawable/wushuju"
                android:gravity="center"
                android:padding="10.0dip"
                android:textColor="@color/gray_line" />

            <me.maxwin.view.XListView
                android:id="@+id/xlistView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff0f0f0"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>