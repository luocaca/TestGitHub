<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/image_gallery_item_total"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.zzy.common.widget.gestureimageview.GestureImageView
        android:id="@+id/image_gallery_item_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/un_down_load_pic_icon" />

    <com.util.androidgiflib.GifImageView
        android:id="@+id/image_gallery_item_gif_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerInside"
        android:visibility="gone" />

    <ProgressBar
        android:id="@+id/image_gallery_item_pb"
        android:layout_width="22dip"
        android:layout_height="22dip"
        android:layout_centerInParent="true"
        android:indeterminate="false"
        android:indeterminateDrawable="@anim/refresh_progress_animation_list"
        android:visibility="gone" />

</RelativeLayout>