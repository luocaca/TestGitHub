<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res/com.hldj.hmyg"
    android:id="@+id/rl_Pop"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/gbpBlackLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/popWinBgColor" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:text="种植类型："
                android:textSize="@dimen/x15" />
        </LinearLayout>

        <com.zhy.view.flowlayout.TagFlowLayout
            android:id="@+id/id_flowlayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@color/white"
            android:padding="2.5dp"
            app:auto_select_effect="true"
            app:max_select="-1" >
        </com.zhy.view.flowlayout.TagFlowLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y28"
            android:orientation="horizontal"
            android:visibility="gone"
            android:paddingLeft="@dimen/x5"
            android:paddingRight="@dimen/x5" >

            <TextView
                android:id="@+id/tv_type01"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/y21"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x8"
                android:layout_weight="1"
                android:background="@drawable/sellect_edit_selector"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:text="地栽苗"
                android:textColor="@color/gray"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_type02"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/y21"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x8"
                android:layout_weight="1"
                android:background="@drawable/sellect_edit_selector"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:text="移植苗"
                android:textColor="@color/gray"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_type03"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/y21"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x8"
                android:layout_weight="1"
                android:background="@drawable/sellect_edit_selector"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:text="假植苗"
                android:textColor="@color/gray"
                android:textSize="@dimen/x13" />

            <TextView
                android:id="@+id/tv_type04"
                android:layout_width="0.0dip"
                android:layout_height="@dimen/y21"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/x8"
                android:layout_weight="1"
                android:background="@drawable/sellect_edit_selector"
                android:gravity="center"
                android:padding="@dimen/x2"
                android:text="容器苗"
                android:textColor="@color/gray"
                android:textSize="@dimen/x13" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/gray_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/y34"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/iv_reset"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:text="重置"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/main_color" />

            <TextView
                android:id="@+id/sure"
                android:layout_width="0.0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/main_color"
                android:gravity="center"
                android:text="确认"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>