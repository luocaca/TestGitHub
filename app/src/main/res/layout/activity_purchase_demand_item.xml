<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:segmentedgroup="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res/com.hldj.hmyg"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/price_relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/y34"
            android:background="@color/white" >

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="@dimen/x24"
                android:layout_height="@dimen/x24"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x10"
                android:background="@drawable/btn_back" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:textColor="@color/main_color"
                android:textSize="@dimen/x18" />

            <RelativeLayout
                android:id="@+id/rl_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/x15" >

                <ImageView
                    android:id="@+id/iv_seller_makingacall_2"
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/seller_makingacall_2" />

                <TextView
                    android:id="@+id/id_tv_edit_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_seller_makingacall_2"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="客服"
                    android:textColor="@color/main_color"
                    android:textSize="10sp" />
            </RelativeLayout>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <LinearLayout
            android:id="@+id/ll_total"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#E9FFE9"
            android:padding="5.0dip" >

            <TextView
                android:id="@+id/tv_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.0sp" />

            <TextView
                android:id="@+id/tv_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17.0sp" />
        </LinearLayout>

    <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7.5dip"
                android:layout_marginLeft="10.0dp"
                android:layout_marginTop="7.5dip"
                android:layout_toLeftOf="@+id/tv_btn"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:textSize="14.5sp" />
            
            <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/main_color" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/line" />

        <RelativeLayout
            android:id="@+id/rl_segmented"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:visibility="gone" >

            <info.hoang8f.android.segmented.SegmentedGroup
                android:id="@+id/segmented3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10.0dip"
                android:layout_marginRight="10.0dip"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal"
                app:sc_unchecked_tint_color="@color/white"
                segmentedgroup:sc_border_width="1dp"
                segmentedgroup:sc_corner_radius="5dp"
                segmentedgroup:sc_tint_color="@color/main_color" >

                <RadioButton
                    android:id="@+id/button31"
                    style="@style/RadioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="全部"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/button32"
                    style="@style/RadioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="已审核"
                    android:textSize="12sp" />

                <RadioButton
                    android:id="@+id/button33"
                    style="@style/RadioButton4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="未审核"
                    android:textSize="12sp" />
            </info.hoang8f.android.segmented.SegmentedGroup>
        </RelativeLayout>
    </LinearLayout>

    <ExpandableListView
        android:id="@+id/expandlist"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_save"
        android:layout_below="@+id/price_relative"
        android:cacheColorHint="#00000000"
        android:divider="@android:color/white"
        android:dividerHeight="1dp" />

    <LinearLayout
        android:id="@+id/ll_save"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y34"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/save01"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/white"
            android:gravity="center"
            android:text="帮忙选价"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/main_color" />

        <Button
            android:id="@+id/save02"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@color/main_color"
            android:gravity="center"
            android:text="确认报价"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/white" />
    </LinearLayout>

</RelativeLayout>