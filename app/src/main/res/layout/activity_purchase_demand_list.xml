<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.hldj.hmyg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y34"
        android:background="@color/white" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="采购需求"
            android:id="@+id/tv_title"
            android:textColor="@color/main_color"
            android:textSize="@dimen/x18" />

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="@dimen/x24"
            android:layout_height="@dimen/x24"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:background="@drawable/btn_back" />

        <TextView
            android:id="@+id/id_tv_edit_all"
            android:layout_width="@dimen/x48"
            android:layout_height="@dimen/x24"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x15"
            android:gravity="center"
            android:text="我的"
            android:textColor="@color/main_color"
            android:textSize="16dp"
            android:visibility="gone" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/main_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#FFFFFF" >

            <EditText
                android:id="@+id/et_search"
                android:layout_width="match_parent"
                android:layout_height="30.0dip"
                android:layout_centerVertical="true"
                android:layout_marginBottom="7.5dip"
                android:layout_marginLeft="10.0dp"
                android:layout_marginTop="7.5dip"
                android:layout_toLeftOf="@+id/tv_btn"
                android:background="@drawable/search_bg"
                android:ems="10"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:maxLines="1"
                android:paddingLeft="10.0dip"
                android:paddingRight="10.0dip"
                android:textSize="14.5sp" />
            
            <TextView
            android:id="@+id/tv_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/main_color" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/main_color" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/rl_all"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/x7"
            android:paddingLeft="@dimen/x10"
            android:paddingRight="@dimen/x10"
            android:paddingTop="@dimen/x7" >

            <RelativeLayout
                android:id="@+id/rl_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_01"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/manager_all"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_02"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="未提交"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:id="@+id/iv_seller_arrow2"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_03"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="报价中"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:id="@+id/iv_seller_arrow3"
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_04"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_04"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="确认中"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray" />

            <RelativeLayout
                android:id="@+id/rl_05"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_05"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="报价完成"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>

            <ImageView
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/gray"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/rl_06"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center_vertical"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv_06"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:text="@string/manager_unsubmit"
                        android:textColor="@color/little_gray"
                        android:textSize="@dimen/y10" />

                    <ImageView
                        android:layout_width="@dimen/x10"
                        android:layout_height="@dimen/x10"
                        android:layout_gravity="center_vertical"
                        android:gravity="center"
                        android:src="@drawable/icon_seller_arrow1"
                        android:visibility="gone" />
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_data"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <me.kaede.tagview.TagView
                android:id="@+id/tagview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2.5dp"
                app:lineMargin="5dp"
                app:tagMargin="3dp"
                app:textPaddingBottom="3dp"
                app:textPaddingLeft="10dp"
                app:textPaddingRight="10dp"
                app:textPaddingTop="3dp" >
            </me.kaede.tagview.TagView>

            <me.maxwin.view.XListView
                android:id="@+id/xlistView"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#fff0f0f0" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>