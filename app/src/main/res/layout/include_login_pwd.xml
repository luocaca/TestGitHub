<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y17"
        android:background="@drawable/loginbtn_selector_gray"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/login_phone" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:hint="@string/input_username_or_phone_number"
            android:minHeight="@dimen/x20"
            android:singleLine="true"
            android:textColor="@color/login_input_color"
            android:textColorHint="@color/gray_edit_hint"
            android:textSize="@dimen/y10" />

        <ImageButton
            android:id="@+id/btn_clear_num"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:padding="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/clear_icon"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y17"
        android:background="@drawable/loginbtn_selector_gray"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/x20"
        android:paddingRight="@dimen/x20">

        <ImageView
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/login_passward" />

        <EditText
            android:id="@+id/et_passward"
            android:layout_width="0.0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/x10"
            android:layout_weight="1.0"
            android:background="@color/transparent"
            android:hint="@string/input_passward"
            android:inputType="textPassword"
            android:maxLength="15"
            android:minHeight="@dimen/x20"
            android:singleLine="true"
            android:textColor="@color/gray_edit_hint"
            android:textColorHint="@color/gray_edit_hint"
            android:textSize="@dimen/y10" />

        <ImageButton
            android:id="@+id/btn_clear_password"
            android:layout_width="40.0dip"
            android:layout_height="40.0dip"
            android:layout_gravity="center_vertical"
            android:background="@color/transparent"
            android:padding="10.0dip"
            android:scaleType="centerInside"
            android:src="@drawable/clear_icon"
            android:visibility="gone" />
    </LinearLayout>

    <com.neopixl.pixlui.components.textview.TextView
        android:id="@+id/login"
        style="@style/NoActionBarTheme.TextHuaWenXiHei"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/y28"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginRight="@dimen/x20"
        android:layout_marginTop="@dimen/y17"
        android:background="@drawable/login_submit_states"
        android:enabled="false"
        android:gravity="center"
        android:text="@string/login"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/white"
        android:textSize="@dimen/y11"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x35"
        android:layout_marginRight="@dimen/x35"
        android:layout_marginTop="@dimen/x10">

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/reg"
            style="@style/NoActionBarTheme.TextHuaWenXiHei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:text="@string/register_quick"
            android:textColor="@color/register_gray" />

        <com.neopixl.pixlui.components.textview.TextView
            android:id="@+id/find_passward"
            style="@style/NoActionBarTheme.TextHuaWenXiHei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:text="@string/loss_passward"
            android:textColor="@color/register_gray" />
    </RelativeLayout>


</LinearLayout>